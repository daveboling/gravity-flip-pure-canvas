doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width')
    title Gravity Flip
    link(href='lib/ionic/css/ionic.css', rel='stylesheet')
    link(href='//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
    script(src='lib/ionic/js/ionic.bundle.js')
    script(src='cordova.js')
    script(src='js/app.js')
    script(src='js/asset.js')
    script(src='js/ship.js')
    script(src='js/rock.js')
    script(src='js/line.js')
    script(src='js/game.js')
    script(src='js/main.js')
  body(ng-app='falldown' ng-controller='MainCtrl')
    ion-header-bar.bar-dark
      button.button.button-clear(ng-show='gameActive') {{clock}} s
      h1.title GRAVITY FLIP
      button.button.button-assertive(ng-click='start()' ng-hide='gameActive') Start Game
    ion-content
      canvas#canvas(ng-show='gameActive')
